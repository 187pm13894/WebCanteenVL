@model WebCanteenVL.Models.CATEGORY

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xoá</h2>

<h3>Bạn có chắc muốn xoá loại này?</h3>
<div>
    <h4>Thể loại món ăn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã loại món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORY_CODE)
        </dd>

        <dt>
            Tên loại món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORY_NAME)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.IMAGE_URL)" width="100px" />
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.STATUS)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
