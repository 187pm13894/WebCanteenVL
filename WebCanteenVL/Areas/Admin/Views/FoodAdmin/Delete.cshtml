@model WebCanteenVL.Models.FOOD

@{
    ViewBag.Title = "Xoá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xoá món ăn</h2>

<h3>Bạn có chắc muốn xoá món này?</h3>
<div>
    <h4>Món ăn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FOOD_CODE)
        </dd>

        <dt>
            Tên món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FOOD_NAME)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESCRIPTION)
        </dd>

        <dt>
            Giá tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRICE)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.IMAGE_URL)" width="100px" />
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.STATUS, "Trạng thái")
        </dd>

        <dt>
            Mã loại món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORY.CATEGORY_CODE)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
